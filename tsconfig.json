{
    "compilerOptions": {
        "target": "ES2024",
        "lib": ["ES2024"],
        "module": "NodeNext",
        "rootDir": "./src",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "generated/prisma-client"],
    "exclude": ["node_modules", "dist"]
}
